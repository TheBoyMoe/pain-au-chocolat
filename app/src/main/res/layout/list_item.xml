<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:padding="@dimen/padding"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/shop_image"
        android:contentDescription="@string/shop_logo"
        android:scaleType="centerCrop"
        android:layout_marginRight="@dimen/padding"
        android:layout_marginEnd="@dimen/padding"
        android:src="@mipmap/ic_launcher"
        android:layout_width="@dimen/app_thumbnail_size"
        android:layout_height="@dimen/app_thumbnail_size"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/shop_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            tools:text="Pan du Chocolat"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/shop_rating"
            tools:text="Rating: 4.5"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            android:layout_width="76dp"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/shop_street"
            android:layout_below="@id/shop_name"
            android:layout_gravity="center_vertical"
            tools:text="111 Shoreditch Ave, SE1"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </RelativeLayout>




</LinearLayout>