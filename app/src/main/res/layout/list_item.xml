<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:padding="@dimen/dimen_normal"
              android:gravity="center_vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/shop_image"
        android:contentDescription="@string/shop_logo"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        android:layout_marginRight="@dimen/dimen_normal"
        android:layout_marginEnd="@dimen/dimen_normal"
        android:layout_width="@dimen/app_thumbnail_size"
        android:layout_height="@dimen/app_thumbnail_size"/>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/location_name"
                android:textStyle="bold"
                tools:text="Pan du Chocolat"
                android:singleLine="true"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/location_distance"
                tools:text="0.2 miles"
                android:gravity="end"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>


        </LinearLayout>


        <TextView
            android:id="@+id/location_street"
            tools:text="111 Shoreditch Ave, SE1"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/location_rating"
            tools:text="Rating: 4.5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>




</LinearLayout>